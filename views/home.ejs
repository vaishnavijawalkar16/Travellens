<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Travel Lens - Home</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body>
  <header class="home-header">
    <img src="/images/logo1.png" class="logo-small" alt="logo">
    <h2 class="title">Travel Lens</h2>
    <i class="fa-solid fa-bell notif"></i>
  </header>

  <main class="home-container">
    <h3>Welcome Back, <%= userName || "Traveler" %>!</h3>

    <form id="uploadForm" action="/search/image" method="POST" enctype="multipart/form-data">
      <input id="image-input" type="file" name="image" accept="image/*" capture="environment" style="display:none;">
      <button type="button" class="snap-btn" id="upload-btn">ðŸ“¸ Tap to Snap<br><small>or Upload</small></button>
    </form>

    <h3>Recent Searches</h3>
    <div class="cards">
      <% if (recentSearches && recentSearches.length > 0) { %>
        <% recentSearches.forEach(search => { %>
          <div class="card" onclick="location.href='/details/<%= search._id %>'">
            <img src="<%= search.imageUrl || '/images/default-landmark.jpg' %>" alt="<%= search.landmarkName %>">
            <h4><%= search.landmarkName %></h4>
            <p><%= search.location || 'Unknown location' %><br><small><%= new Date(search.createdAt).toLocaleString() %></small></p>
          </div>
        <% }) %>
      <% } else { %>
        <p style="text-align:center;color:gray;">No recent searches yet.</p>
      <% } %>
    </div>
  </main>

  <nav class="bottom-nav">
    <i class="fa-solid fa-house" onclick="location.href='/home'"></i>
    <i class="fa-solid fa-heart" onclick="location.href='/user/bookmarks'"></i>
    <i class="fa-solid fa-user" onclick="location.href='/account'"></i>
  </nav>

  <script>
    document.getElementById('upload-btn').addEventListener('click', () => document.getElementById('image-input').click());
    document.getElementById('image-input').addEventListener('change', function() { if (this.files.length) document.getElementById('uploadForm').submit(); });
  </script>
</body>
</html>
